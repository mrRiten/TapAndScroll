@{
}

@model TapAndScroll.Core.ViewModels.FilterProduct;

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="category-form">
                <h2>Создать Товар</h2>
                <form id="productForm" asp-controller="Catalog" asp-action="List" method="post">
                    <input asp-for="@Model.FilterUpload.CategoryId" value="@Model.Category.IdCategory" hidden="hidden"/>
                    <div class="mb-3">
                        <label asp-for="@Model.FilterUpload.Brand" class="form-label">Название Бренда</label>
                        <input asp-for="@Model.FilterUpload.Brand" class="form-control product">
                    </div>
                    <div class="mb-3">
                        <h3>Цена</h3>
                        <label asp-for="@Model.FilterUpload.Price" class="form-label">Цена от</label>
                        <input asp-for="@Model.FilterUpload.Price" class="form-control product range">
                        <label asp-for="@Model.FilterUpload.Price" class="form-label">Цена до</label>
                        <input asp-for="@Model.FilterUpload.Price" class="form-control product range">
                    </div>
                    <div class="mb-3">
                        <label asp-for="@Model.FilterUpload.IsGaming" class="form-label">Игровой?</label>
                        <input asp-for="@Model.FilterUpload.IsGaming" class="form-check-input radio-btn product">
                    </div>
                    <div class="mb-3">
                        <label asp-for="@Model.FilterUpload.DiscountPercent" class="form-label">Скидка на товар в процентах</label>
                        <input asp-for="@Model.FilterUpload.DiscountPercent" class="form-control product range">
                        <label asp-for="@Model.FilterUpload.DiscountPercent" class="form-label">Скидка на товар в процентах</label>
                        <input asp-for="@Model.FilterUpload.DiscountPercent" class="form-control product range">
                    </div>

                    <input id="Parameters" asp-for="@Model.FilterUpload.AdditionalParameters" hidden="hidden" />

                    @foreach (var parameter in Model.Category.AdditionalParametersCategory)
                    {
                        <h3>@parameter.NameParameters</h3>
                        if (parameter.IsRange)
                        {
                            <div class="mb-3">
                                <label for="@parameter.SlugParameters" class="form-label">@parameter.NameParameters от</label>
                                <textarea name="@parameter.SlugParameters" class="form-control product range" rows="2" placeholder="Введите @parameter.NameParameters от"></textarea>
                                <label for="@parameter.SlugParameters" class="form-label">@parameter.NameParameters до</label>
                                <textarea name="@parameter.SlugParameters" class="form-control product range" rows="2" placeholder="Введите @parameter.NameParameters до"></textarea>
                            </div>
                        }
                        if (!parameter.IsRange)
                        {
                            <div class="mb-3">
                                <label for="@parameter.SlugParameters" class="form-label">@parameter.NameParameters</label>
                                <textarea name="@parameter.SlugParameters" class="form-control product" rows="2" placeholder="Введите @parameter.NameParameters"></textarea>
                            </div>
                        }
                        
                    }

                    <button type="submit" class="btn btn-primary">Применить</button>
                </form>
            </div>
        </div>
    </div>
</div>

@if (Model.Products != null)
{
    @foreach (var product in Model.Products)
    {
        <p>@product.ProductName</p>
        foreach (var parameters in product.Parameters)
        {
            <p>@parameters.Key - @parameters.Value</p>
        }
        <br />
    }
}


<script>
    document.getElementById("productForm").onsubmit = function () {
        var productList = document.getElementsByClassName("product");
        var parameters = document.getElementById("Parameters");

        for (i = 0; i != productList.length; i++) {
            if (parameters.classList.contains("range")) {
                parameters.value += `${productList[i].name}:${productList[i].value}~${productList[i++].value},`
            }
            else {
                parameters.value += `${productList[i].name}:${productList[i].value},`
            }
        }
    }
</script>