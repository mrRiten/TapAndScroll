}

@model TapAndScroll.Core.Models.Category;

<link rel="stylesheet" href="~/css/Category.css" asp-append-version="true" />

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="category-form">
                <h2>Изменить Товар</h2>
                <form id="productForm" asp-controller="Admin" asp-action="EditCategory" method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label asp-for="@Model.CategoryName" class="form-label">Название Категории</label>
                        <input asp-for="@Model.CategoryName" class="form-control" required value="@Model.CategoryName">
                    </div>
                    <div class="mb-3">
                        <label asp-for="@Model.CategoryDescription" class="form-label">Описание Категории</label>
                        <textarea asp-for="@Model.CategoryDescription" class="form-control" rows="2" placeholder="Введите описание Товара" required>@Model.CategoryDescription</textarea>
                    </div>
                    <input asp-for="@Model.IdCategory" value="@Model.IdCategory" />

                    <button type="submit" class="btn btn-primary">Применить</button>
                </form>
            </div>
        </div>
    </div>
</div>c